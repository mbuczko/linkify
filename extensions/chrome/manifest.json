{
  "manifest_version": 2,
  "name": "Linkify Chrome extension",
  "version": "1.0",
  "description": "Save your precious links",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts":  [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["injected.js"],
      "css": ["modal.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "key": "",
  "icons": {
    "128": "icon128.png"
  },
  "permissions":  [
    "declarativeContent",
    "storage",
    "activeTab",
    "tabs",
    "http://localhost:8001/*"
  ],
  "web_accessible_resources": [
    "modal.html"
  ],
  "page_action": {
    "default_popup": "popup.html"
  }
}
